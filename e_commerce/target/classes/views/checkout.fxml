<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CheckoutController">
   <children>
      <Label text="Checkout" />
      <TextField fx:id="addressField" promptText="Shipping Address" />
      <TextField fx:id="paymentField" promptText="Payment Method" />
      <Button text="Confirm Order" onAction="#handleCheckout"/>
   </children>
   <padding>
      <Insets top="20" right="20" bottom="20" left="20"/>
   </padding>
</VBox>
